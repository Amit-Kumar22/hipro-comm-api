# API Environment Variables for Local Development

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/hipro-comm-db

# JWT Configuration
JWT_SECRET=REMOVED_JWT_SECRET
JWT_EXPIRES_IN=7d
COOKIE_SECRET=REMOVED_COOKIE_SECRET

# CORS Configuration
FRONTEND_URL=http://localhost:3201
ADMIN_URL=http://localhost:3202

# Rate Limiting (relaxed for development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Upload Configuration
UPLOAD_PATH=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif

# Logging Configuration
LOG_LEVEL=debug

# Email Configuration - Hostinger SMTP
EMAIL_SERVICE=smtp
EMAIL_USER=info@hiprotech.org
EMAIL_PASS=REMOVED_SMTP_PASS
EMAIL_FROM=info@hiprotech.org

# Hostinger SMTP Settings
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=info@hiprotech.org
SMTP_PASS=REMOVED_SMTP_PASS
SMTP_FROM_NAME=HiPro Commerce (Dev)
SMTP_FROM_EMAIL=info@hiprotech.org

# Production Configuration (will be overridden by .env.production on server)
# NODE_ENV=production
# MONGODB_URI=mongodb://localhost:27017/hipro-comm-prod
# FRONTEND_URL=https://shop.hiprotech.org
